<h1 class="text-center mt-4">New Category</h1>
<%= form_for([:admin, @category]) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="mt-5 col-md-6 offset-md-3 text-left"> 
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
        </div>
        
        <div class="form-group">
            <%= f.submit "create new category", class: 'btn btn-info btn-block mt-5' %>
        </div>

    </div>
<% end %>