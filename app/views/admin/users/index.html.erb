<h1 class="text-center mt-3">Administer Users</h1>
<div class="mt-3 col-md-6 offset-md-3">
    <table class="table table-bordered" cellpadding="10px" style="border-collapse: collapse;">
        <tr>
            <th>Name</th>
            <th>Mail address</th>
            <th>Admin</th>
        </tr>
        <% @users.each do |user| %>
            <tr>
                <td>
                    <%= user.name %>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <% if user.is_admin? %>
                        <%= button_to "Remove", [:admin, user], method: :delete, class: "btn btn-outline-info btn-add-admin admin-btn-settings" %>
                    <% else %>
                        <%= button_to "Add", [:admin, user], method: :patch, class: "btn btn-outline-info btn-add-admin admin-btn-settings" %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </table>

    <BR>

    <div class="paginate text-center">
        <%= will_paginate %>
    </div>

    <BR>

    <div>	
        <%= link_to "Back", admin_users_home_path, class: "" %>
    </div>
</div>
